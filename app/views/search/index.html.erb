<div class="container">

    <div class="bs-docs-section">
        <div class="row">
          <div class="col-lg-12">
            <div class="page-header">
              <h1 id="tables"><%= @stationName %>駅</h1>
            </div>
            
            <% @facility.each do |fa| %>
            <% if fa["Name"] == "バリアフリー状況" %>
            <h2 id="nav-tabs"><%= fa["Name"] %></h2>
            <div class="bs-component">
              <table class="table table-striped table-hover ">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>概要</th>
                  </tr>
                </thead>
                <tbody>
                  <% comment = fa["Comment"].split(/\R/) %>
                  <% comment.each do |c| %>
                  <% s = c.split("：") as s %>
                  <tr>
                    <td><%= s["0"] %></td>
                    <td><%= s["1"] %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div><!-- /example -->
            <% end %>
            <% end %>
          </div>
        </div>
    </div>
</div>